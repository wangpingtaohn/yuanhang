<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/topBar"
        layout="@layout/layout_base_title" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/sivAvatar"
        app:layout_constraintTop_toTopOf="@id/topBar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_app"
        app:shapeAppearance="@style/circle_imageView"
        android:layout_width="88dp"
        android:layout_height="88dp"/>

    <ImageView
        android:id="@+id/ivWallet"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_app"
        app:layout_constraintTop_toBottomOf="@id/sivAvatar"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:text="钱包"
        android:textColor="@color/ps_color_33"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/ivWallet"
        app:layout_constraintLeft_toRightOf="@id/ivWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_arrow"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/ivWallet"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:alpha="0.2"
        android:id="@+id/v1"
        android:background="@color/color_8e"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivWallet"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <ImageView
        android:id="@+id/ivCollect"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_app"
        app:layout_constraintTop_toBottomOf="@id/v1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:text="收藏"
        android:textColor="@color/ps_color_33"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/ivCollect"
        app:layout_constraintLeft_toRightOf="@id/ivCollect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_arrow"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/ivCollect"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:alpha="0.2"
        android:id="@+id/v2"
        android:background="@color/color_8e"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivCollect"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <ImageView
        android:id="@+id/ivAlbum"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_app"
        app:layout_constraintTop_toBottomOf="@id/v2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:text="相册"
        android:textColor="@color/ps_color_33"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/ivAlbum"
        app:layout_constraintLeft_toRightOf="@id/ivAlbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_arrow"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/ivAlbum"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:alpha="0.2"
        android:id="@+id/v3"
        android:background="@color/color_8e"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivAlbum"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <ImageView
        android:id="@+id/ivCard"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_app"
        app:layout_constraintTop_toBottomOf="@id/v3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:text="卡包"
        android:textColor="@color/ps_color_33"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/ivCard"
        app:layout_constraintLeft_toRightOf="@id/ivCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_arrow"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/ivCard"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:alpha="0.2"
        android:id="@+id/v4"
        android:background="@color/color_8e"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivCard"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


    <ImageView
        android:id="@+id/ivEmoji"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_app"
        app:layout_constraintTop_toBottomOf="@id/v4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:text="表情"
        android:textColor="@color/ps_color_33"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/ivEmoji"
        app:layout_constraintLeft_toRightOf="@id/ivEmoji"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_arrow"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/ivEmoji"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/v5"
        android:alpha="0.2"
        android:background="@color/color_8e"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivEmoji"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <ImageView
        android:id="@+id/ivSetting"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_app"
        app:layout_constraintTop_toBottomOf="@id/v5"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_width="20dp"
        android:layout_height="20dp"/>

    <TextView
        android:text="设置"
        android:textColor="@color/ps_color_33"
        android:textSize="14dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/ivSetting"
        app:layout_constraintLeft_toRightOf="@id/ivSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:src="@drawable/ic_arrow"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toTopOf="@id/ivSetting"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:alpha="0.2"
        android:id="@+id/v6"
        android:background="@color/color_8e"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/ivSetting"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

    <!-- 底部tab栏-->
    <View
        android:id="@+id/vBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:background="@color/color_e8"
        app:layout_constraintBottom_toTopOf="@id/tvHome" />

    <TextView
        android:id="@+id/tvHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:drawableTop="@drawable/ic_tab_home"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="首页"
        android:textColor="@color/color_89"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tvHall" />

    <TextView
        android:id="@+id/tvHall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_tab_hall"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="关注"
        android:textColor="@color/color_89"
        android:textSize="15dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tvHome"
        app:layout_constraintRight_toLeftOf="@id/tvApply"
        app:layout_constraintTop_toTopOf="@id/tvHome" />

    <TextView
        android:id="@+id/tvApply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_tab_apply"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="消息"
        android:textColor="@color/color_89"
        android:textSize="15dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tvHall"
        app:layout_constraintRight_toLeftOf="@id/tvMine"
        app:layout_constraintTop_toTopOf="@id/tvHome" />
    <TextView
        android:id="@+id/tvMine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_tab_mine"
        android:drawablePadding="4dp"
        android:gravity="center"
        android:text="我的"
        android:textColor="@color/color_dc7927"
        android:textSize="15dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/tvApply"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvHome" />
</androidx.constraintlayout.widget.ConstraintLayout>