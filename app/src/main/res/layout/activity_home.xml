<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_33A46A">

    <include
        android:id="@+id/topBar"
        layout="@layout/layout_base_title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clUser"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_margin="20dp"
        android:background="@drawable/shape_white_radius16"
        android:paddingBottom="6dp"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="-6dp"
            android:alpha="0.5"
            android:rotation="45"
            android:src="@drawable/ic_logo"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/sivAvatar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_app"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/circle_imageView" />

        <TextView
            android:id="@+id/tvStudent"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white_store_1874dc_radius4"
            android:gravity="center"
            android:text="学生"
            android:textColor="@color/color_1874dc"
            android:textSize="13dp"
            app:layout_constraintLeft_toLeftOf="@id/sivAvatar"
            app:layout_constraintRight_toRightOf="@id/sivAvatar"
            app:layout_constraintTop_toBottomOf="@id/sivAvatar" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:text="姓名"
            android:textColor="@color/color_79"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/sivAvatar"
            app:layout_constraintTop_toTopOf="@id/sivAvatar" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxLines="1"
            android:text="李子婵"
            android:textColor="@color/color_46"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/tvName"
            app:layout_constraintTop_toTopOf="@id/tvName" />

        <TextView
            android:id="@+id/tvCollege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="学院"
            android:textColor="@color/color_79"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/sivAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvName" />

        <TextView
            android:id="@+id/etCollege"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxLines="1"
            android:text="机械工程电子学院"
            android:textColor="@color/color_46"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/tvCollege"
            app:layout_constraintTop_toTopOf="@id/tvCollege" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:text="学号"
            android:textColor="@color/color_79"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/sivAvatar"
            app:layout_constraintTop_toBottomOf="@id/tvCollege" />

        <EditText
            android:id="@+id/etNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:background="@null"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="number"
            android:maxLines="1"
            android:text="120040100428"
            android:textColor="@color/color_46"
            android:textSize="14dp"
            app:layout_constraintLeft_toRightOf="@id/tvNumber"
            app:layout_constraintTop_toTopOf="@id/tvNumber" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="468dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_info"
        app:layout_constraintTop_toBottomOf="@+id/clUser">

        <TextClock
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:format12Hour="yyyy-MM-dd hh:mm:ss"
            android:format24Hour="yyyy-MM-dd HH:mm:ss"
            android:gravity="center"
            android:textColor="@color/color_79"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tvAuto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginBottom="50dp"
            android:text="每30秒自动刷新"
            android:textColor="@color/color_79"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="50dp"
            android:text="点我刷新"
            android:textColor="@color/color_4984b4"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tvAuto" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/etView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/ivPreview"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:layout_constraintTop_toBottomOf="@id/clUser"
        android:scaleType="centerCrop"
        android:layout_marginHorizontal="64dp"
        tools:src="@drawable/ic_logo" />

    <ImageView
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/ivClose"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="@id/ivPreview"
        app:layout_constraintTop_toTopOf="@id/ivPreview" />


</androidx.constraintlayout.widget.ConstraintLayout>